@model IEnumerable<AppUser>
@{
    ViewBag.Title = "Manage";
    Layout = "_AdminLayout";
}

<div><h3>User Accounts</h3></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-striped table-bordered table-sm">

    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th class="text-center">Actions</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        foreach (AppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td class="text-center">

                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit"
                           asp-route-id="@user.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>



                </td>
            </tr>
        }
    }

</table>

<div>
    <a class="btn btn-primary" asp-action="Create">Create User</a>
    <a asp-area="" asp-controller="Admin" asp-action="HandleSpotMe" class="btn btn-info">Handle SpotMe</a>

    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <a asp-controller="Account" asp-action="Logout"
           class="btn btn-danger">Logout</a>
    }
</div>