@model IEnumerable<IdentityRole>
<div><h3>Roles</h3></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-striped table-bordered table-sm">
    <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Users</th>
    <th class="text-center">Actions</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>

                <td class="text-center">

                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit"
                           asp-route-id="@role.Id">Edit</a>
                        <button type="submit"
                                class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
    }
</table>
<div>
    <a class="btn btn-primary" asp-action="Create">Create Role</a>
    <a asp-area="" asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Go to User Accounts</a>
    <a asp-area="" asp-controller="Admin" asp-action="HandleSpotMe" class="btn btn-info" d>Handle SpotMe</a>
    <a asp-area="" asp-controller="MuscleGroup" asp-action="Create" class="btn btn-dark" d>Create Muscles</a>
    <a asp-area="" asp-controller="MuscleGroup" asp-action="HandleMuscle" class="btn btn-success" d>Handle Muscles</a>

    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <a asp-controller="Account" asp-action="Logout"
           class="btn btn-danger">Logout</a>
    }
</div>
