            <div class="form-group">
                <label>Password:</label><input type="password" placeholder="Enter Password" asp-for="userPassword" class="form-control " />
                <span asp-validation-for="userPassword" class="text-danger"></span>
                <label for="togglePassword"></label>
                <input type="checkbox" onclick="myFunction()">Show Password
                <script>
                    function myFunction() {
                        var x = document.getElementById("userPassword");
                        if (x.type === "password") {
                            x.type = "text";
                        } else {
                            x.type = "password";
                        }
                    }
                </script>
            </div>

            <div class="form-group">
                <button type="button" onclick="window.location.href = 'Index'" class="cancelbtn">Cancel</button>
                <input type="submit" value="Sign Up" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MuscleGroup">Go to workouts</a>
</div>

