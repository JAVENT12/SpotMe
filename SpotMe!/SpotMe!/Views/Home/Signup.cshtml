@model SpotMe_.Models.Excerciser

@{
    ViewData["Title"] = "Signup";
}

    <body>
        <link rel="stylesheet" href="~/css/SignUpSheet.css" />
        <link rel="stylesheet" href="/css/styles.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />


        <form asp-action="Signup" style="border:1px solid #ccc" method="post">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="container">
                <h1>Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>
                @*<div asp-validation-summary="All" class="text-danger"></div>*@

             


                <div class="form-group">
                    <label>First Name:</label><input asp-for="firstName" class="form-control" />
                </div>



                <div class="form-group">
                    <label>Last Name:</label><input asp-for="lastName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>UserName:</label><input asp-for="userName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Email:</label><input asp-for="email" class="form-control" />

                </div>
                <!-- <label for="email"><b>Email</b></label>--->
                <!--<input type="text" placeholder="Enter Email" name="email" required>-->

                <div class="form-group">
                    <label>Password:</label><input asp-for="userPassword" class="form-control" />
                </div>
                <!--<label for="psw"><b>Password</b></label> -->
                <!--<input type="password" placeholder="Enter Password" name="psw" required> -->
                <!--<label for="psw-repeat"><b>Repeat Password</b></label>-->
                <!--<input type="password" placeholder="Repeat Password" name="psw-repeat" required>-->

                <label>
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
                </label>

                <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

                <div class="form-group">

                    <button type="button" onclick="window.location.href = 'Index'" class="cancelbtn">Cancel</button>
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <input type="submit" value="Sign Up" class="signupbtn" />
                    <button type="submit" asp-controller="Home" asp-action="MuscleGroup" value="Create" class="signupbtn">Sign Up</button>

                    <div>
                        <input value="" />
                    </div>

                </div>
            </div>
        </form>
    </body>
